<html>
  <head>
    <title>Creating Blog Page - detail</title>
    <link
      rel="stylesheet"
      href="../assets/css/blog.css"
    />
    <link
      rel="stylesheet"
      href="../assets/css/index.css"
    />
    <link
      rel="stylesheet"
      href="../assets/css/nav.css"
    />
  </head>

  <body>
    <nav class="navbar">
      <ul class="navbar-ul">
        <div class="navbar-left">
          <li>
            <img
              src="../assets/img/dumbways.png"
              class="navbar-logo"
            />
          </li>
          <li>
            <a
              href="/"
              class="navbar-link"
            >
              Home
            </a>
          </li>
          <li>
            <a
              href="/blog"
              class="navbar-link active"
            >
              Blog
            </a>
          </li>
        </div>
        <div class="navbar-right">
          <li>
            <a
              href="/contact"
              class="navbar-contact-btn"
            >
              Contact
            </a>
          </li>
          <button
            id="hamburger-button"
            onclick="toggleHamburger()"
          >
            <i class="fa-solid fa-bars fa-2x"></i>
          </button>
        </div>
      </ul>
    </nav>
    <div class="hamburger-container hide">
      <a
        href="/"
        class="hamburger-nav-link"
      >
        Home
      </a>
      <a
        href="/blog"
        class="hamburger-nav-link hamburger-active"
      >
        Blog
      </a>
      <a
        href="/contact"
        class="hamburger-nav-link"
      >
        Contact
      </a>
    </div>

<div class="blog-detail">
      <div class="blog-detail-container">
        <h1>{{data.title}}</h1>
        <div class="author">{{data.createdAt}}
        <p>Dibuat Oleh : {{data.user.name}} </p>
        <img src="/uploads/{{data.image}}" alt="Blog Image">
        <p>
         {{data.content}}
        </p>
        {{data.isFeatured}}
        <span class="badge bg-success">Fullstack</span>
      </div>
    </div>
    <script src="../assets/js/nav.js"></script>
  </body>
</html>
